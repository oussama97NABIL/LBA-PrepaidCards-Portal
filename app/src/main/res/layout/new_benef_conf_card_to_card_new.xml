<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">


    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="-30dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1">



        <LinearLayout
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_below="@id/heading_layout"
            android:layout_gravity="start"
            android:orientation="vertical"
            android:paddingTop="20dp">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_marginTop="20.0dip"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/validation_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="4"
                        android:layout_marginLeft="8.0dip"
                        android:layout_marginTop="12.0dip"
                        android:layout_marginBottom="10.0dip"
                        android:layout_weight=".5"
                        android:fontFamily="@font/poppinsmedium"
                        android:gravity="center_horizontal"
                        android:text="Validation et Otp"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16ssp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3px"
                        android:layout_marginStart="-280dp"
                        android:layout_marginTop="55dp"
                        android:layout_marginEnd="28dp"
                        android:background="@color/grey9"
                        />
                </TableRow>
                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_column="4"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/grey10"
                        android:fontFamily="@font/poppinsmedium"
                        android:gravity="center_horizontal"
                        android:layout_weight=".5"
                        android:text="Afin de traiter votre transaction,"
                        />
                </TableRow>
                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="4"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:layout_weight=".5"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-160dp"

                        android:layout_column="4"
                        android:layout_weight=".5"
                        android:textSize="@dimen/_9ssp"
                        android:textColor="@color/grey10"
                        android:fontFamily="@font/poppinsmedium"
                        android:gravity="center_horizontal"
                        android:text="Titulaire de carte: " />
                    <TextView
                        android:id="@+id/nom_carte"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-100dp"
                        android:layout_column="4"
                        android:fontFamily="@font/poppinsmedium"
                        android:layout_weight=".5"
                        android:textSize="@dimen/_9ssp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:text="Titulaire de carte " />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-160dp"
                        android:layout_column="4"
                        android:layout_weight=".5"
                        android:textSize="@dimen/_9ssp"
                        android:textColor="@color/grey10"
                        android:fontFamily="@font/poppinsmedium"
                        android:gravity="center_horizontal"
                        android:text="Numéro de carte: " />
                    <TextView
                        android:id="@+id/num_carte_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-100dp"
                        android:layout_column="4"
                        android:layout_weight=".5"
                        android:textSize="@dimen/_9ssp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppinsmedium"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:text="NumCompte " />

                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-80dp"
                        android:layout_column="4"
                        android:layout_weight=".5"
                        android:textSize="@dimen/_9ssp"
                        android:textColor="@color/grey10"
                        android:fontFamily="@font/poppinsmedium"
                        android:gravity="center_horizontal"
                        android:text="Numéro de carte bénéficiaire: " />
                    <TextView
                        android:id="@+id/reférence_carte_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-120dp"
                        android:layout_column="4"
                        android:layout_weight=".5"
                        android:textStyle="bold"
                        android:textSize="@dimen/_9ssp"
                        android:fontFamily="@font/poppinsmedium"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:text="47852333 " />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-130dp"
                        android:layout_column="4"
                        android:layout_weight=".5"
                        android:textSize="@dimen/_9ssp"
                        android:fontFamily="@font/poppinsmedium"
                        android:textColor="@color/grey10"
                        android:gravity="center_horizontal"
                        android:text="Montant de virement: " />
                    <TextView
                        android:id="@+id/montant_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-100dp"
                        android:layout_column="4"
                        android:layout_weight=".5"
                        android:textStyle="bold"
                        android:textSize="@dimen/_9ssp"
                        android:fontFamily="@font/poppinsmedium"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:text="NumCompte " />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-225dp"
                        android:layout_column="4"
                        android:layout_weight=".5"
                        android:textSize="@dimen/_9ssp"
                        android:fontFamily="@font/poppinsmedium"
                        android:textColor="@color/grey10"
                        android:gravity="center_horizontal"
                        android:text="Motif: " />
                    <TextView
                        android:id="@+id/motif_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-100dp"
                        android:layout_column="4"
                        android:layout_weight=".5"
                        android:textSize="@dimen/_9ssp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppinsmedium"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:text="NumCompte " />
                </TableRow>
                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="4"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:layout_weight=".5"
                        />
                </TableRow>
                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="4"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppinsmedium"
                        android:gravity="center_horizontal"
                        android:layout_weight=".5"
                        android:text="Nous avons envoyé un code à,"
                        />
                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/num"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:text="00 233 78000882"
                        android:fontFamily="@font/poppinsmedium"
                        android:inputType="numberDecimal"
                        android:textAlignment="center"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold"
                        android:textColor="@color/DebianRed" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="9"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </TableRow>

                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textChequeMsg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="4"
                        android:layout_weight=".5"
                        android:textSize="@dimen/_9ssp"
                        android:layout_marginStart="55dp"
                        android:width="@android:dimen/thumbnail_width"
                        android:text="Entrer le code vérification: "
                        android:fontFamily="@font/poppinsmedium"
                        android:layout_gravity="center"
                        android:textAlignment="gravity"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/black" />
                </TableRow>
                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/codeVerification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="4"
                        android:layout_weight=".5"
                        android:width="50dp"
                        android:inputType="number"
                        android:layout_gravity="center"
                        android:textAlignment="gravity"
                        android:background="@drawable/custom_eidttext"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/black" />
                </TableRow>
                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="4"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:layout_weight=".5"
                        />
                </TableRow>
                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/svBenf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="4"
                        android:layout_weight=".5"
                        android:fontFamily="@font/poppinsmedium"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:text="Veuillez confirmer votre choix "                       />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="9"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </TableRow>


            </TableLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btnNOk"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:background="@drawable/custom_annuler_button"
                    android:clickable="true"
                    android:elevation="5dp"
                    android:enabled="true"
                    android:text="Annuler"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnOk"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_ok_button"
                    android:clickable="true"
                    android:enabled="true"
                    android:text="Ok"
                    android:textColor="@color/white" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>