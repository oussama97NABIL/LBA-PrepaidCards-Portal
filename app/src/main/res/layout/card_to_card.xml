							android:layout_weight="1.0"
							android:fontFamily="@font/miloot_bold"
							android:text="MEMO"
							android:textAllCaps="true"
							android:textColor="@color/MurasakiPurple"
							android:textSize="12.0sp"
							android:textStyle="bold" />

						<EditText
							android:id="@+id/branch"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:layout_weight="1.0"
							android:background="@color/transparent"
							android:fontFamily="@font/miloot_bold"
							android:inputType="text"
							android:textSize="17.299988sp" />

						<View
							android:id="@+id/view7"
							android:layout_width="match_parent"
							android:layout_height="1.0dip"
							android:layout_marginTop="5.0dip"
							android:layout_weight="1.0"
							android:background="#ffeff0f4" />


					</LinearLayout>

				</LinearLayout>
			</LinearLayout>

			<!--<Button  android:textStyle="bold" android:id="@+id/btnLoad" android:paddingTop="12.0dip" android:paddingBottom="12.0dip" android:clickable="true" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="19.299988dip" android:layout_marginTop="10.0dip" android:layout_marginRight="19.299988dip" android:layout_marginBottom="10.0dip" android:layout_alignParentBottom="true" android:text="SEARCH"  />


		-->

