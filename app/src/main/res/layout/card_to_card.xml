<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/root"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@color/white"
	android:orientation="vertical">



	<include layout="@layout/page_title" />

	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:paddingTop="8dp"
		android:scrollbars="none">

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:clipToPadding="false"
			android:orientation="vertical"
			android:paddingTop="1dp"
			android:paddingBottom="60.0dip">

			<LinearLayout
				android:layout_width="334dp"
				android:layout_height="495dp"
				android:layout_marginLeft="19.299988dip"
				android:layout_marginRight="19.299988dip"
				android:background="@drawable/white_rect"
				android:elevation="4dp"
				android:orientation="vertical"
				android:paddingLeft="19.199982dip"
				android:paddingTop="10dp"
				android:paddingRight="40dp"
				android:paddingBottom="18.699982dip">

				<LinearLayout
