<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/root"
	android:orientation="vertical">
	<include layout="@layout/page_title" />
	<LinearLayout

		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<LinearLayout
			android:id="@+id/ll1"
			android:layout_width="match_parent"
			android:layout_height="27dp"
			android:layout_weight="5">
		</LinearLayout>


		<ScrollView
			android:id="@+id/scroll_view"
			android:layout_width="match_parent"
			android:layout_height="670dp"
			android:layout_marginStart="5dp"
			android:layout_marginLeft="16dp"
			android:layout_marginTop="7dp"
			android:layout_marginEnd="5dp"
			android:layout_marginRight="16dp"
			android:layout_marginBottom="20dp"
			android:layout_weight="2">

			<LinearLayout
				android:id="@+id/ll2"
				android:layout_width="320dp"
				android:background="@drawable/currencyandnumcard"
				android:paddingBottom="40dp"
				android:elevation="12dp"
				android:layout_marginStart="10dp"
				android:layout_height="match_parent"
				android:orientation="vertical">
				<TextView
					android:id="@+id/numéroCarte"
					android:layout_width="470dp"
					android:layout_marginTop="20dp"
					android:layout_height="80dp"
					android:layout_marginStart="16dp"
					android:text="Numéro de la carte"
					android:textColor="@color/grey1"
					android:fontFamily="@font/poppinsmedium"/>
				<com.google.android.material.textfield.TextInputLayout
					android:id="@+id/mobilelLayout"
					android:layout_width="330dp"
					android:layout_height="80dp"
					android:layout_marginTop="-50dp"
					android:layout_marginStart="16dp"
					app:layout_constraintTop_toBottomOf="@id/numéroCarte"
					android:fontFamily="@font/poppinsmedium"
					android:textColorHint="@color/grey1"
					app:errorEnabled="true"
					>
					<com.google.android.material.textfield.TextInputEditText
						android:id="@+id/cardNumber"
						android:layout_width="280dp"
						android:layout_height="50dp"
						android:background="@drawable/custom_eidttext"
						android:fontFamily="@font/poppinsmedium"
						android:paddingStart="15dp"
						android:clickable="true"
						android:textSize="@dimen/_10ssp"
						android:ems="10"
						android:enabled="false"
						android:focusable="false"
						android:focusableInTouchMode="false"
						android:inputType="text"
						android:textColor="@color/black"
						/>
				</com.google.android.material.textfield.TextInputLayout>
				<TextView
					android:id="@+id/numéroCarte"
					android:layout_width="470dp"
					android:layout_height="80dp"
					android:layout_marginStart="16dp"
					android:text="Date de début"
					android:textColor="@color/grey1"
					android:fontFamily="@font/poppinsmedium"/>
				<com.google.android.material.textfield.TextInputLayout
					android:id="@+id/mobilelLayout"
					android:layout_width="330dp"
					android:layout_height="80dp"
					android:layout_marginTop="-50dp"
					android:layout_marginStart="16dp"
					app:layout_constraintTop_toBottomOf="@id/numéroCarte"
					android:fontFamily="@font/poppinsmedium"
					android:textColorHint="@color/grey1"
					app:errorEnabled="true"
					>

					<com.google.android.material.textfield.TextInputEditText
						android:id="@+id/startDate"
						android:layout_width="280dp"
						android:layout_height="50dp"
						android:background="@drawable/custom_eidttext"
						android:fontFamily="@font/poppinsmedium"
						android:paddingStart="15dp"
						android:clickable="true"
						android:textSize="@dimen/_10ssp"
						android:ems="10"
						android:enabled="true"
						android:focusable="false"
						android:focusableInTouchMode="false"
						android:inputType="text"
						android:textColor="@color/black"
						/>
				</com.google.android.material.textfield.TextInputLayout>
				<TextView
					android:id="@+id/numéroCarte"
					android:layout_width="470dp"
					android:layout_height="80dp"
					android:layout_marginStart="16dp"
					android:text="Date de fin"
					android:textColor="@color/grey1"
					android:fontFamily="@font/poppinsmedium"/>
				<com.google.android.material.textfield.TextInputLayout
					android:id="@+id/mobilelLayout"
					android:layout_width="330dp"
					android:layout_height="80dp"
					android:layout_marginTop="-50dp"
					android:layout_marginStart="16dp"
					app:layout_constraintTop_toBottomOf="@id/numéroCarte"
					android:fontFamily="@font/poppinsmedium"
					android:textColorHint="@color/grey1"
					app:errorEnabled="true"
					>

					<com.google.android.material.textfield.TextInputEditText
						android:id="@+id/endDate"
						android:layout_width="280dp"
						android:layout_height="50dp"
						android:background="@drawable/custom_eidttext"
						android:paddingStart="15dp"
						android:fontFamily="@font/poppinsmedium"
						android:clickable="true"
						android:textSize="@dimen/_10ssp"
						android:ems="10"
						android:enabled="true"
						android:focusable="false"
						android:focusableInTouchMode="false"
						android:inputType="text"
						android:textColor="@color/black"
						/>
				</com.google.android.material.textfield.TextInputLayout>






				<include
					android:id="@+id/footer_layout"
					layout="@layout/footer_layout"
					android:layout_width="350dp"
					android:layout_height="wrap_content"
					android:layout_alignParentBottom="true"
					android:layout_marginTop="150dp" />
			</LinearLayout>


		</ScrollView>


	</LinearLayout>


</RelativeLayout>