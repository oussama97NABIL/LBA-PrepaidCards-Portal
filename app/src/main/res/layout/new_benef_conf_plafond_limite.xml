<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">





    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="-30dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_below="@id/heading_layout"
            android:layout_gravity="start"

            android:orientation="vertical"
            android:paddingTop="20dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">






                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_marginTop="20.0dip"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/validation_title"
                        android:layout_width="17dp"
                        android:layout_height="wrap_content"
                        android:layout_column="4"
                        android:layout_marginLeft="8.0dip"
                        android:layout_marginTop="12.0dip"
                        android:layout_marginBottom="10.0dip"
                        android:layout_weight=".5"
                        android:fontFamily="@font/poppinsmedium"
                        android:gravity="center_horizontal"
                        android:text="@string/Validation"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16ssp"
                        android:textStyle="bold" />
                    <View
                        android:layout_width="2dp"
                        android:layout_height="1dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginStart="-280dp"
                        android:layout_marginTop="55dp"
                        android:background="@color/grey9" />

                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_marginTop="59dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="5"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </TableRow>

                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-45dp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="4"
                        android:layout_marginTop="-3dp"
                        android:textSize="@dimen/_13ssp"
                        android:textColor="@color/grey8"
                        android:gravity="center_horizontal"
                        android:fontFamily="@font/poppinsmedium"
                        android:layout_weight=".5"
                        android:text="Confirmation pour la limite de la carte,"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="9"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="4"
                        android:layout_weight=".5"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/poppinsmedium"
                        android:textColor="@color/marron"
                        android:gravity="center_horizontal"
                        android:text="Etes vous sûr de vouloir limiter la carte de numéro"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="9"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </TableRow>

                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>



                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/cardNumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:layout_marginTop="10dp"
                        android:text=""
                        android:inputType="numberDecimal"
                        android:fontFamily="@font/poppinsmedium"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/red_close" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="9"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </TableRow>
            </TableLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btnNOk"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:background="@drawable/custom_annuler_button"
                    android:clickable="true"
                    android:elevation="5dp"
                    android:enabled="true"
                    android:text="Annuler"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnOk"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_ok_button"
                    android:clickable="true"
                    android:enabled="true"
                    android:text="Ok"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>