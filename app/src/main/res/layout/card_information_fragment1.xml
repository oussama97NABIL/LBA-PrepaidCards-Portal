<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">



    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer_layout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="5dp"
                android:width="150dp"
                android:text="CARD NUMBER"
                android:textAlignment="gravity"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <Spinner
                android:id="@+id/spincard"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                style="@style/spinner_style"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="5dp"
                android:width="150dp"
                android:text="Bank Code"
                android:textAlignment="gravity"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textSize="14dp" />


            <EditText
                android:id="@+id/bankCode"
                android:layout_width="fill_parent"
                android:layout_height="40dp"

                style="@style/spinner_style"

                android:inputType="textPersonName"
                android:paddingRight="5dp"

                android:textColorHint="@color/black"
                android:textColor="@color/black"/>




            <TextView
                android:id="@+id/textView8"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="5dp"
                android:width="150dp"
                android:text="Bank Name"
                android:textAlignment="gravity"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textSize="14dp" />


            <EditText
                android:id="@+id/bankName"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_column="4"
                android:width="150dp"

                style="@style/spinner_style"
                android:inputType="numberDecimal"
                android:textColor="@color/black"/>


            <TextView
                android:id="@+id/textView10"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="5dp"
                android:width="150dp"
                android:text="Client Code"
                android:textAlignment="gravity"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textSize="14dp" />


            <EditText
                android:id="@+id/ClientCode"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_column="4"
                android:width="150dp"

                style="@style/spinner_style"
                android:inputType="numberDecimal"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/branchView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="5dp"
                android:width="150dp"
                android:text="BRANCH"
                android:textAlignment="gravity"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textSize="14dp" />


            <EditText
                android:id="@+id/Branch"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_column="4"
                android:width="150dp"

                style="@style/spinner_style"
                android:inputType="numberDecimal"
                android:textColor="@color/black"/>


            <TextView
                android:id="@+id/bankcodeView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="5dp"
                android:width="150dp"
                android:text="CLIENT TYPE"
                android:textAlignment="gravity"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textSize="14dp" />


            <EditText
                android:id="@+id/ClientType"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_column="4"
                android:width="150dp"

                style="@style/spinner_style"
                android:inputType="numberDecimal"
                android:textColor="@color/black"/>




        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/footer_layout"
        layout="@layout/footer_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        />

</RelativeLayout>