			</LinearLayout>


		</ScrollView>

		<include
			android:id="@+id/footer_layout"
			layout="@layout/footer_layout"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_marginBottom="50dp" />
	</LinearLayout>


</RelativeLayout>